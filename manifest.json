{
    "name": "Esportal Browser Boost",
    "version": "0.0.0.2",
    "manifest_version": 3,
    "description": "Remove the twitch section from esportal.com",
    "icons": {
        "16": "icons/logo_transparent-16_x_16.png",
        "32": "icons/logo_transparent-32_x_32.png",
        "48": "icons/logo_transparent-48_x_48.png",
        "128": "icons/logo_transparent-128_x_128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://esportal.com/*"],
            "js": ["/remove.js"]
        }
    ],
    "action":{
        "default_title": "Remove stream"
    },
    "permissions": ["activeTab", "scripting"],
    "background": {
        "service_worker": "background.js"
      }
}